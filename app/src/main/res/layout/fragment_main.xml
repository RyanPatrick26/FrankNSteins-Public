<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.install.franknsteins.MainFragment"
    android:orientation="vertical"
    android:background="@color/frankBackgroundColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.install.franknsteins.MainFragment"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/mainscreenLogo"
                android:src="@drawable/franknsteins_logo_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gourmet Franks\n&amp;\nTasty Steins!"
                android:id="@+id/mainSubtitleText"
                android:gravity="center_horizontal"
                android:textSize="@dimen/titleTextSize"
                android:layout_margin="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Welcome to Frank &apos;N&apos; Steins: a place where Frankers and Frankettes of all ages can come and enjoy some of the most delicious, one-of-a-kind Franks you&apos;ll ever taste!"
                android:id="@+id/mainDescriptionText"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:paddingTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:id="@+id/mainscreenFrank"
                android:src="@drawable/frank_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="We also host some of the finest Steins on tap as well many delicious beers on bottle for our 19+ patrons."
                android:id="@+id/mainDescriptionText2"
                android:gravity="center_horizontal"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:id="@+id/mainscreenStein"
                android:src="@drawable/steins_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Please enjoy our app. With it, you can check out our menu, get in contact with us, make a table reservation, get an estimation on your bill and even build your own custom Frank! Check out some of app features below:"
                android:id="@+id/mainscreenFeaturesText"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>