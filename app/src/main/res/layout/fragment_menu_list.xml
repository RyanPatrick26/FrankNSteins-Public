<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.install.franknsteins.MenuListFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/title_text_view"
        android:gravity="center"
        android:layout_weight="3.25"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/frankTextColor" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/menu_content"></ListView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/estimate_bill_button"
        android:id="@+id/estimate_bill_button"
        android:background="@color/frankTextColor"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:layout_weight="3"
        android:padding="5dp"
        android:textColor="@color/frankBackgroundColor"
        android:textStyle="bold"
        android:textSize="18sp" />


</LinearLayout>
